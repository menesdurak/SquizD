<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quizStartFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.quiz.QuizFragment"
    android:background="@color/main">

    <TextView
        android:id="@+id/textQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="2dp"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textAnswer1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Question"
        android:textColor="@color/textColorOpposite"/>

    <TextView
        android:id="@+id/textAnswer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp"
        android:gravity="center"
        android:minHeight="50dp"
        android:padding="10dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textQuestion"
        tools:text="Answer1 Answer1Answer1 Answer1 Answer1 Answer1 Answer1 Answer1 Answer"
        android:background="@color/sub3"
        android:textColor="@color/textColor"/>

    <TextView
        android:id="@+id/textAnswer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="2dp"
        android:gravity="center"
        android:minHeight="50dp"
        android:padding="10dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAnswer1"
        tools:text="Answer1 Answer1Answer1 Answer1 Answer1 Answer1 Answer1 Answer1 Answer"
        android:background="@color/sub3"
        android:textColor="@color/textColor"/>

    <TextView
        android:id="@+id/textAnswer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="2dp"
        android:gravity="center"
        android:minHeight="50dp"
        android:padding="10dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAnswer2"
        tools:text="Answer1 Answer1Answer1 Answer1 Answer1 Answer1 Answer1 Answer1 Answer"
        android:background="@color/sub3"
        android:textColor="@color/textColor"/>

    <TextView
        android:id="@+id/textAnswer4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="2dp"
        android:gravity="center"
        android:minHeight="50dp"
        android:padding="10dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAnswer3"
        tools:text="Answer1 Answer1Answer1 Answer1 Answer1 Answer1 Answer1 Answer1 Answer"
        android:background="@color/sub3"
        android:textColor="@color/textColor"/>

</androidx.constraintlayout.widget.ConstraintLayout>